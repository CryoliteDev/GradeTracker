<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/assignment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/due_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text=""
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/assignment_text_view"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/assignment_average"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="100%"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/background"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/assignment_grade_stat"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:text="Honors"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/background"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:layout_marginTop="1dp"
            android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/assignment_average" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>